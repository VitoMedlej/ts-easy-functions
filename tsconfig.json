{
  "compilerOptions": {
    "target": "es6",              // Or "ES2015" or later
    "lib": ["es2015", "dom"],     // Ensure ES2015 library is included
    "module": "commonjs",         // Or another module system of your choice
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./**/*"
  ]
}
